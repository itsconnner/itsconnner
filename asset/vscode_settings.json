{
/* -------------------------------  Window  -------------------------------- */
	"workbench.activityBar.location": "top",
	"window.restoreWindows": "none",
	"window.zoomLevel": 4,
	"explorer.autoReveal": false,
	"window.customTitleBarVisibility": "never",
/* -------------------------------  Editor  -------------------------------- */
	"workbench.editor.doubleClickTabToToggleEditorGroupSizes": "off",
	"workbench.editor.enablePreview": false,
	"workbench.editor.editorActionsLocation": "hidden",
	"diffEditor.renderSideBySide": false,
	"merge-conflict.decorators.enabled": false,
	"editor.stickyScroll.enabled": false,
	"editor.minimap.enabled": false,
	"editor.scrollbar.horizontal": "hidden",
/* -----------------------------  Suggestion  ------------------------------ */
	"editor.guides.indentation": false,
	"editor.quickSuggestions": {
		"other": "off"
	},
	"editor.suggestOnTriggerCharacters": false,
	"explorer.confirmPasteNative": false,
	"explorer.confirmDragAndDrop": false,
	"explorer.confirmDelete": false,
	"C_Cpp.errorSquiggles": "disabled",
	"cmake.showOptionsMovedNotification": false,
	"extensions.ignoreRecommendations": true,
/* ---------------------------  Srouce Control  ---------------------------- */
	"scm.showActionButton": false,
	"git.showCommitInput": false,
	"git.openRepositoryInParentFolders": "never",
/* ------------------------------  Highlight  ------------------------------ */
	"editor.occurrencesHighlight": "off",
	"editor.selectionHighlight": false,
	"editor.matchBrackets": "never",
	"editor.unicodeHighlight.includeStrings": false,
	"C_Cpp.dimInactiveRegions": false,
/* --------------------------------  Save  --------------------------------- */
	"files.autoSave": "onFocusChange",
	"files.insertFinalNewline": true,
/* -----------------------------  Indentation  ----------------------------- */
	"editor.autoIndent": "brackets",
	"editor.detectIndentation": false,
	"editor.insertSpaces": false,
	"editor.tabSize": 8,
	"[cmake]": {
		"editor.insertSpaces": true,
		"editor.indentSize": 2
	},
	"[jsonc]": {
		"editor.tabSize": 3
	},
	"[xml]": {
		"editor.insertSpaces": true,
		"editor.indentSize": 2
	},
	"[markdown]": {
		"editor.wordWrap": "off"
	},
/* -------------------------  File Header Comment  ------------------------- */
	"fileHeaderComment.template": {
		"*": [
			"${spdxbegin} SPDX-License-Identifier: ${license}",
			"${begin}",
			"${prefix} Copyright ${year} Jiamu Sun",
			"${prefix}",
			"${prefix} Contact: barroit@linux.com",
			"${end}"
		],
		"source": [
			"// SPDX-License-Identifier: ${license}",
			"/*",
			" * Copyright ${year} Jiamu Sun <barroit@linux.com>",
			" */"
		],
		"header": [
			"/* SPDX-License-Identifier: ${license} */",
			"/*",
			" * Copyright ${year} Jiamu Sun <barroit@linux.com>",
			" */"
		]
	},
/* ------------------------------  Code Snap  ------------------------------ */
	"codesnap.showWindowControls": false,
	"codesnap.realLineNumbers": true,
	"codesnap.roundedCorners": false,
	"codesnap.shutterAction": "copy",
	"codesnap.containerPadding": "0",
/* --------------------------------  Misc  --------------------------------- */
	"cmake.configureOnOpen": false,
/* -----------------------------  Association  ----------------------------- */
	"C_Cpp.autoAddFileAssociations": false,
	"files.associations": {
		"*gdbinit": "plaintext",
		"README*": "plaintext",
		"Kconfig": "plaintext",
		"TODO": "plaintext",
		".git*": "plaintext",
		".muttrc": "plaintext",
		".config*": "plaintext",
		"*.h.in": "c",
		"*.hpp.in": "cpp",
		"vscode_settings.json": "jsonc"
	},
/* --------------------------------  Font  --------------------------------- */
	"editor.fontFamily": "'JetBrains Mono'",
	"editor.fontSize": 19,
/* ----------------------------  Color Scheme  ----------------------------- */
	"workbench.colorTheme": "Default Dark Modern",
	"C_Cpp.enhancedColorization": "disabled",
	"workbench.colorCustomizations": {
		"editorBracketHighlight.foreground1": "#A8A8A8",
		"editorBracketHighlight.foreground2": "#A8A8A8",
		"editorBracketHighlight.foreground3": "#A8A8A8",
		"editorBracketHighlight.foreground4": "#A8A8A8",
		"editorBracketHighlight.foreground5": "#A8A8A8",
		"editorBracketHighlight.foreground6": "#A8A8A8",
		"editor.foreground": "#A8A8A8",
		"editor.background": "#141414",
		"diffEditor.removedLineBackground": "#500000a0",
		"diffEditor.insertedLineBackground": "#2b3f14fa",
		"diffEditor.insertedTextBackground": "#0000"
	},
	"editor.tokenColorCustomizations": {
		"textMateRules": [
			/* -----------------------  C/CPP  ----------------------- */
			{
				"scope": "constant.other.placeholder",
				"settings": {
					"foreground": "#CE9178"
				}
			},
			{
				"scope": [
					"keyword.control",
					"keyword.operator.new.cpp",
					"keyword.operator.delete",
					"keyword.other.using.directive",
					"keyword.other.operator.overload",
					"support.type.posix-reserved",
					"support.type.built-in.posix-reserved",
					"storage.type.built-in.primitive",
					"storage.modifier"
				],
				"settings": {
					"foreground": "#569CD6"
				}
			},
			{
				"scope": [
					"entity.name.function",
					"support.function.builtin"
				],
				"settings": {
					"foreground": "#C6C699"
				}
			},
			{
				"scope": [
					"constant.numeric.decimal",
					"constant.numeric.integer"
				],
				"settings": {
					"foreground": "#ACC4A0"
				}
			},
			{
				"scope": [
					"meta.preprocessor.macro",
					"entity.name.type",
					"entity.name.function.preprocessor",
					"entity.name.function",
					"entity.name.label.call",
					"entity.name.label",
					"entity.name.scope-resolution",
					"entity.name.other.preprocessor.macro.predefined",
					"entity.name.operator.type",
					"entity.other.attribute",
					"entity.other.attribute-name",
					"storage.modifier.pointer",
					"storage.modifier.reference",
					"storage.source.cmake",
					"variable",
					"variable.other.enummember",
					"string.regexp",
					"constant.character.escape",
					"constant.language",
					"keyword.operator",
					"keyword.operator.quantifier.regexp",
					"keyword.control.directive",
					"keyword.control.directive",
					"comment",
					"punctuation.parenthesis.begin.regexp",
					"punctuation.parenthesis.end.regexp"
				],
				"settings": {
					"foreground": "#A8A8A8"
				}
			},
			/* -----------------------  JAVA  ------------------------ */
			{
				"scope": [
					"storage.modifier.import.java",
					"storage.type.annotation.java",
					"storage.type.java",
					"storage.type.generic.java"
				],
				"settings": {
					"foreground": "#A8A8A8"
				}
			},
			{
				"scope": [
					"storage.type.primitive.java"
				],
				"settings": {
					"foreground": "#569CD6"
				}
			},
			/* ----------------------  PYTHON  ----------------------- */
			{
				"scope": [
					"variable.legacy.builtin.python"
				],
				"settings": {
					"foreground": "#A8A8A8"
				}
			},
			/* -----------------------  SHELL  ----------------------- */
			{
				"scope": [
					"support.function.builtin"
				],
				"settings": {
					"foreground": "#A8A8A8"
				}
			},
			/* -----------------------  JSON  ------------------------ */
			{
				"scope": [
					"support.type.property-name.json.comments"
				],
				"settings": {
					"foreground": "#939393"
				}
			}
		]
	}
}
